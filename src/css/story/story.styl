/* CUSTOM STORY STYLE */
#v0
	background-color $fg
	color $bg
	font-family $sans
	
	#content
		overflow hidden
		margin-bottom 3rem

	#media
		// z-index set-index(bottom)
		max-width 60rem
		margin 0 auto
		position relative
		padding-top 3rem

	#plays-container
		margin 0 auto
		overflow hidden
		height $play-height
		position relative
		&:after
			position absolute
			top 0
			display block
			content ''
			width 100%
			height $play-height
			z-index 100
			pointer-events none
			right -80%
			background linear-gradient(to right, rgba($fg,0) 0%,rgba($fg,1) 50%,rgba($fg,1) 100%)
		// &:before
		// 	position absolute
		// 	top 0
		// 	display block
		// 	content ''
		// 	width 100%
		// 	height $play-height
		// 	z-index 100
		// 	pointer-events none
		// 	left -80%
		// 	background linear-gradient(to left, rgba($fg,0) 0%,rgba($fg,1) 50%,rgba($fg,1) 100%)

	#player-container
		width 100%
		padding 0 1rem

	#player
		width 100%

	#plays
		width 100%
		display flex
		align-items flex-end
		height $play-height
		transition transform 500ms ease-in-out

		.play
			width 100%
			position relative
			padding 1rem
			width $play-width
			opacity 0.33
			transition opacity 500ms ease-in-out
			flex 1 0 auto
			p
				margin 0
			&.is-active
				opacity 1
				.title
					background $fg
					color $primary
			.title
				margin 0
				width 100%
				font-weight 900
				set-type-size(medium, false)
				line-height 1.2
				padding 0.5rem

			.info
				margin-top 0.5rem
				padding 0 0.5rem
				display flex
				justify-content space-between
				transition opacity 500ms ease-in-out
				p
					set-type-size(x-small, false)
					line-height 1
					font-weight 500
					text-transform uppercase


.byline
	max-width 26rem
	margin 3rem auto 0 auto
	padding 0 1rem
	set-type-size('small', true)